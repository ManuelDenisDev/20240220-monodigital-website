---
import TituloSubtitulo from '@shared/Titles/TituloSubtitulo.astro'
import ButtonSecundario from '@shared/Buttons/ButtonSecundario.astro'
import CardsWrapper from '@shared/Cards/CardsWrapper.astro'
import CardsTiltsEmoji from '@shared/Cards/CardsTiltsEmoji.astro'

import bannerBranding from '@config/banner-branding.json'

const { cards } = bannerBranding

---
<article class="flex flex-col justify-start items-start gap-12" data-aos="fade-up" data-aos-duration="2000">
    <TituloSubtitulo titulo="DiseÃ±o de logotipos" subtitulo="para empresas, marcas y productos." alinear='left'/>
    <ButtonSecundario texto="Branding" url="/branding" />
</article>
<CardsWrapper estilos='mt-24 grid tabletS:grid-cols-2 tabletL:grid-cols-2 laptop:grid-cols-4 desktopS:grid-cols-4 gap-2 rounded-2xl'>
{
    cards.map(({ url, titulo, subtitulo, emojiTitulo, items, precio, tagline }: { url: string; titulo: string; subtitulo: string; emojiTitulo: string; precio: number; tagline: string; items: { texto: string; checked: boolean; }[]; }) => (
        <CardsTiltsEmoji
            url={url}
            titulo={titulo}
            subtitulo={subtitulo}
            emojiTitulo={emojiTitulo}
            items={items}
            precio={precio.toString()}
            tagline={tagline}
        />
    ))
}
</CardsWrapper>