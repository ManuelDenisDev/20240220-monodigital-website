---
interface Props {
    url: string
    texto: string
}

const { url, texto } = Astro.props
---

<a class="monoButton_secundario shadow-massive" href={url}>{texto}</a>
<style>
    .monoButton_secundario {
        @apply inline-flex items-center justify-center w-full sm:w-auto px-6 py-3 text-sm text-center text-onyx-300 dark:text-onyx-800 duration-500 ease-in-out transform border border-onyx-800 dark:border-onyx-300 bg-onyx-900 dark:bg-onyx-200 rounded-xl focus:outline-none focus:ring-2 hover:text-blue-300 focus:ring-offset-2 focus:ring-onyx-300 hover:shadow-none focus:ring-offset-onyx-900;
    }
</style>