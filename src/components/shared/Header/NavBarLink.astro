---
interface Props {
	title: string;
    label: string;
    url: string;
}

const { title, label, url } = Astro.props;

---
<li class=monoNavBarLink>
    <a class="monoNavBarLink__a" aria-label={label} href={url}>
        {title}
    </a>
</li>

<style>
    .monoNavBarLink__a {   
        @apply cursor-pointer px-2 py-2 md:py-10 text-xs text-white dark:text-onyx-50 hover:text-indigo-300 dark:hover:text-indigo-600 transition-all duration-300;
    }
</style>